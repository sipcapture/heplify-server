[Unit]
Description=HEP Server & Switch in Go 
After=network.target

[Service]
ExecStart=/usr/local/bin/heplify-server
ExecStop=/bin/kill ${MAINPID}
Restart=on-failure
RestartSec=10s
Type=simple

[Install]
WantedBy=multi-user.target
